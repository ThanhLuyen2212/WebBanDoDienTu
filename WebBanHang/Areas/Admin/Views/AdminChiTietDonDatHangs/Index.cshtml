@model IEnumerable<WebBanHang.Models.ChiTietDonDatHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DanhGiaSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BinhLuan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoluongMH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonDatHang.DiaChiNhanHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatHang.TenMH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DanhGiaSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BinhLuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoluongMH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonDatHang.DiaChiNhanHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatHang.TenMH)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDChiTietDDH }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDChiTietDDH }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDChiTietDDH })
            </td>
        </tr>
    }

</table>



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách chi tiết các sản phẩm trong hóa đơn</h2>

            <a href="~/Admin/AdminChiTietHoaDons/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một chi tiết hóa đơn mới</button>
            </a>

            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                ID hóa đơn
                            </th>
                            <th style="color:white">
                                Tên mặt hàng
                            </th>
                            <th style="color:white">
                                Số lượng
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonDatHang.IDDDH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MatHang.TenMH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoluongMH)
                                </td>
                                <td>
                                    <a href="~/Admin/AdminChiTietHoaDons/Details/@item.IDChiTietDDH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietHoaDons/Edit/@item.IDChiTietDDH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminChiTietHoaDons/Delete/@item.IDChiTietDDH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>