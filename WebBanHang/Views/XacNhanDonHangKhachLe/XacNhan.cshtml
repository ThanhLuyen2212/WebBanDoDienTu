@using WebBanHang.Models
@model WebBanHang.Models.DonDatHang
@{
    ViewBag.Title = "XacNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DonDatHang hoaDon = (DonDatHang)Session["DonDatHang"];    
    GioHang gioHang = (GioHang)Session["GioHang"];
}

@using (Html.BeginForm("XacNhan", "XacNhanDonHangKhachLe"))
{
    @Html.AntiForgeryToken()
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <h3 style="margin-bottom:50px">Chi tiết hóa đơn</h3>
            <form action="#" class="checkout__form">
                <div class="row">
                    <div class="col-lg-6">

                        <div class="row">
                            <div class="col-lg-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.IDHD)

                                <div class="form-group">
                                    <label>Tên khách hàng</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenKHKhongAccount, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenKHKhongAccount, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Số điện thoại khách hàng</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DienThoaiKhongAccount, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DienThoaiKhongAccount, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label>Địa chỉ nhận hàng</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DiaChiNhanHang, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiaChiNhanHang, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="collapsible">                                   
                      
                                    <input type="checkbox" id="collapsible-head" name="TrangThaiThanhToan"/>
                                    <label for="collapsible-head" style="display:inline-block"> Thanh toán liền</label>
                                                                       
                                    <div class="collapsible-text">                                            
                                        <div class="form-group">
                                            <label>Chọn phương thức thánh toán</label>
                                            <div class="col-md-10">
                                                @Html.DropDownList("IDPT", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.IDPT, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="checkout__order">
                            <h5>Chi tiết các sản phẩm</h5>
                            <div class="checkout__order__product">
                                <ul>
                                    <li>
                                        <span class="top__text">Tên sản phẩm</span>
                                        <span class="top__text__right">ĐG/SP</span>
                                        <span class="top__text__right" style="margin-right:50px">Số lượng</span>
                                    </li>
                                    @foreach (var item in gioHang.ListHang)
                                    {
                                        <li>
                                            @item.gioHang.TenMH
                                            <span class="money">@item.gioHang.DonGia VND</span>
                                            <span style="margin-right:90px">@item._soLuongHang</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="checkout__order__total">
                                <ul>
                                    <li>Tổng cộng <span class="money">@hoaDon.TongTien VND</span></li>
                                </ul>
                            </div>

                            <button type="submit" value="Đặt hàng" class="site-btn">Đặt hàng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Checkout Section End -->

}


<style>
    

    .collapsible{
        display: inline-block;
        max-width:450px;
    }


    .collapsible label{
        position: relative;
        background-color: #ffffff;
        box-shadow: 0 5px 11px 0 rgba(0,0,0,0.1),none 4px 11px 0 rgba(0,0,0,0.08);
        color: #1c1c6b;
        display: block;
        margin-bottom: 10px;
        cursor: pointer;
        padding: 15px;
        border-radius: 4px;

    }

    .collapsible label::after{
        content:"";
        position: absolute;
        right: 15px;
        top: 15px;
        width:18px;
    }

    .collapsible-text{
        max-height:1px;
        overflow: hidden;
        border-radius:4px;
        line-height: 1.4;
        position: relative;
        top: -100%;
        opacity : 0.5;
        transition: all 0.3s ease;
    }

    .collapsible input:checked ~ .collapsible-text {
        max-height: 300px;
        padding-bottom: 25px;
        background: #fff;
        box-shadow: 0 5px 11px 0 rgba(0,0,0,0.1),none 4px 11px 0 rgba(0,0,0,0.08);
        top: 0;
        opacity: 1;
    }
        
</style>